{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "../server",
    "paths": {
      "*": [
        "../node-modules/*"
      ]
    },
    "typeRoots" : ["./typings"],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}